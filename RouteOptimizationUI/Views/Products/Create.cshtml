            </div>
            <!-- end widget edit box -->
            <!-- widget content -->
            <div class="widget-body no-padding">





                            @using (Html.BeginForm(FormMethod.Post))
                            {
                                @Html.ValidationSummary(true)
                                <div class="row">
                                    <section class="col col-6">
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.EditorFor(model => model.Product.Name, new { @class = "text-label", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(model => model.Product.Name)
                                        </label>
                                    </section>
                                    <section class="col col-6">
                                        <label class="input">
                                            <i class="icon-append fa fa-briefcase"></i>
                                            @Html.EditorFor(model => model.Product.ProductNumber, new { htmlAttributes = new { @placeholder = "Product Number" } })
                                            @Html.ValidationMessageFor(model => model.Product.ProductNumber)
                                        </label>
                                    </section>
                                </div>

                                <div class="row">
                                    <section class="col col-6">
                                        <label class="input">
                                            <i class="icon-append fa fa-envelope-o"></i>
                                            @Html.EditorFor(model => model.Product.ListPrice, new { htmlAttributes = new { @placeholder = "List Price" } })
                                            @Html.ValidationMessageFor(model => model.Product.ListPrice)
                                        </label>
                                    </section>
                                    <section class="col col-6">
                                        <label class="input">
                                            <i class="icon-append fa fa-phone"></i>
                                            @Html.EditorFor(model => model.Product.Size, new { htmlAttributes = new { @placeholder = "Size" } })
                                            @Html.ValidationMessageFor(model => model.Product.Size)
                                        </label>
                                    </section>
                                </div>

                                <div class="row">
                                    <section class="col col-6">
                                        <label class="input">
                                            <i class="icon-append fa fa-envelope-o"></i>
                                            @Html.EditorFor(model => model.Product.Weight, new { htmlAttributes = new { @placeholder = "Weight" } })
                                            @Html.ValidationMessageFor(model => model.Product.Weight)
                                        </label>
                                    </section>
                                </div>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            }
                        </div>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->












@model IEnumerable<RouteOptimization.Infrastructure.Product>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->
    <title> Manage Stores </title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
</head>
<body>
    <!-- MAIN CONTENT -->
    <div id="content" class="container">
        <div class="row">
            <h1>New Product</h1>
        </div>
        <div class="well no-padding">
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")


            <form id="smart-form" class="smart-form" novalidate="novalidate" action="~/Controllers/Product/Create" method="post">
                <div class="form-horizontal">
                    <h4>Product</h4>
                    <hr />
                    @Html.ValidationSummary(true)
                    <div class="row">
                        
                        <section class="col col-6">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input type="text" name="ProductName" placeholder="Name">
                            </label>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col col-6">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input type="text" name="ProductNumber" placeholder="Product Number">
                            </label>
                        </section>
                        <section class="col col-6">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input type="text" name="ListPrice" placeholder="Price">
                            </label>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col col-6">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input type="text" name="Size" placeholder="Size">
                            </label>
                        </section>
                        <section class="col col-6">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input type="text" name="Weight" placeholder="Weight">
                            </label>
                        </section>
                    </div>
                </div>
                <input type="submit" value="Create" class="btn btn-default" />
            </form>
        </div>
    </div>
    @Html.Partial("_Product")
</body>
</html>

@model IEnumerable<routeoptimization.infrastructure.Retailer>
    <!DOCTYPE HTML>
    <html>
    <head>
        <meta charset="utf-8">
        <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->
        <title> Manage Retailers </title>
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    </head>
    <body>
        <!-- MAIN CONTENT -->
        <div id="content" class="container">
            <div class="row">
                <h1>New Retailer</h1>
            </div>
            <div class="well no-padding">
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryval")


                <form id="smart-form" class="smart-form" novalidate="novalidate" action="~/Controllers/Retailer/Create" method="post">
                    <div class="form-horizontal">
                        <h4>Retailer</h4>
                        <hr />
                        @Html.ValidationSummary(true)
                        <div class="row">

                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    <input type="text" name="RetailerName" placeholder="Name">
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    <input type="text" name="RetailerNumber" placeholder="Number">
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    <input type="text" name="RetailerEmail" placeholder="Email">
                                </label>
                            </section>
                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    <input type="text" name="RetailerPhone" placeholder="Phone Number">
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    <input type="text" name="RetailerAddress" placeholder="Address">
                                </label>
                            </section>
                        </div>
                    </div>
                    <input type="submit" value="Create" class="btn btn-default" />
                </form>
            </div>
        </div>
        @Html.Partial("_Retailer")
    </body>
</html>

